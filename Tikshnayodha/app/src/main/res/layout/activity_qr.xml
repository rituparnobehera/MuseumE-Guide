<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="horizontal"
android:weightSum="2"
android:padding="5dp"
android:background="@drawable/red_mu"
tools:context="com.example.abhishek.tikshnayodha.QRActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="0.9"
    android:weightSum="3">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.6"
        android:id="@+id/imageView"
        android:src="@drawable/menu_page" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.4"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center">


        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/play_butn"
            android:background="@drawable/video_play_btn"
            android:layout_alignTop="@+id/three_d_btn"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/three_d_btn"
            android:background="@drawable/threed_img_btn"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/play_butn"
            android:layout_marginStart="35dp" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/audio"
            android:background="@drawable/unmute_btn"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/three_d_btn"
            android:layout_marginStart="31dp" />
    </RelativeLayout>

</LinearLayout>



<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:layout_weight="1.1"
    android:padding="5dp"
    android:paddingTop="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1.1"
        android:padding="5dp"
        android:paddingTop="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NAME"
            android:id="@+id/name"
            android:gravity="center"
            android:textColor="#24f908"
            android:textStyle="bold"
            android:maxLines="2"
            android:lines="2"
            android:textSize="25sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/description"
            android:text="Details "
            android:textColor="#06f8dc"
            android:textSize="20sp"/>

    </LinearLayout>

</ScrollView>



</LinearLayout>