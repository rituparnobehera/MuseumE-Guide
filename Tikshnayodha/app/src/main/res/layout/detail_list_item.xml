<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingLeft="10dp"
android:paddingRight="5dp"
android:paddingTop="10dp">

<ImageView
    android:id="@+id/head"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:scaleType="fitXY"
    android:src="@drawable/mot" />

<TextView
    android:layout_width="180sp"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:text="Peter Allan"
    android:textSize="22sp"
    android:id="@+id/aname"
    android:textStyle="italic"
    android:textColor="#1cf608"
    android:maxLines="3"
    android:lines="3"
    android:layout_above="@+id/txtDetail"
    android:layout_alignParentEnd="true" />

<TextView
    android:id="@+id/txtDetail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:lineSpacingExtra="6dp"
    android:maxLines="5"
    android:text="Click here to know details"
    android:textSize="15sp"
    android:textStyle="normal"
    android:gravity="center"
    android:layout_gravity="center"
    android:textColor="#fbdc2e"
    android:layout_below="@+id/head"
    android:layout_alignParentEnd="true" />

<View
    android:layout_width="match_parent"
    android:layout_height="1px"
    android:background="#cccccc"
    android:layout_below="@+id/txtDetail"
    android:layout_alignParentStart="true" />

</RelativeLayout>
